package hello;


import com.hand.guvnor.Message;

rule "Hello World"
    when
     m : Message( status == 0)
    then
     System.out.println( m.message );
     m.setMessage( "Goodbye cruel world" );
     m.setStatus( Message.GOODBYE );
     update( m );
     end


rule "GoodBye"
    when
     Message( status == 1 )
    then
    System.out.println( m.message );

    end