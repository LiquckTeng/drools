import com.hand.guvnor.Message;

rule "Hello World"
    when
     m : Message( status == 0 )
    then
    modify( m ){
         m.setMessage( "hello" );
     };
     end


rule "GoodBye"
    when
    m:Message( status == 1 )
    then
    modify(m){
    m.setMessage( "goodbye" );
    }
    end